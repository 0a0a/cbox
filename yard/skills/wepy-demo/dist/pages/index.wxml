  <view class="demo-list-title">
    This is the wepy-swipe-delete demo
  </view>
  <block wx:for="{{$demoList$list}}" wx:for-index="$demoList$index" wx:for-item="$demoList$item" wx:key="$demoList$index">
    
  <view class="swipe-item-wrapper">
    <view class="swipe-content" style="left:{{$demoList$item.style === 0 ? '0' : $demoList$item.style + 'rpx'}}" bindtouchstart="$demoList$swipeDelete$ts" bindtouchmove="$demoList$swipeDelete$tm" bindtouchend="$demoList$swipeDelete$te" data-com-index="{{$demoList$index}}">
      
      <view class="swipe-title">
        {{$demoList$item.title}}
      </view>
    
    </view>
    <view class="swipe-actions actions-right">
      <view class="swipe-btn del" catchtap="$demoList$swipeDelete$handleRightBtnTap" data-com-index="{{$demoList$index}}" data-wpyhandlerightbtntap-a="{{$demoList$item}}">删除</view>
    </view>
  </view>

  </block>


  
    <view class="wetoast {{$toast$reveal ? 'wetoast_show' : ''}}">
        <view class="wetoast__mask"/>
        <view class="wetoast__bd" animation="{{$toast$animationData}}">
            <block  wx:if="{{$toast$img}}">
                <view class="wetoast__bd__img {{$toast$imgClassName || ''}}">
                    <image class="wetoast__bd__img_desc" src="{{$toast$img}}" mode="{{$toast$imgMode || 'scaleToFill'}}"/>
                </view>
            </block>
            <block  wx:if="{{$toast$title}}">
                <view class="wetoast__bd__title {{$toast$titleClassName || ''}}">{{$toast$title}}</view>
            </block>
        </view>
    </view>
